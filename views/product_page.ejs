<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Plants</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../../style/home.css" />
    <script
      src="https://kit.fontawesome.com/8ba7ccfbdc.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <section id="hero">
      
      <div class="hero-text">
        <h1>plant webshop</h1>
        <!-- <a href="/logout">Logout</a> -->

        <%- include ("login_form.ejs") %>
      </div>
      <div class="img">
        <img src="../../img/bg1.jpg" alt="" />
      </div>
    </section>

    <section id="products">
      <% products.forEach(product => { %>
      <div style="border: 1px solid black; width: 80%">
        <div><%= product.image %></div>
        <h4><%= product.name %></h4>
        <h3><%= product.price %></h3>
        <h3>ITEM ID :<%= product.id %></h3>
        <button>Add to cart</button>
      </div>
      <br />
      <% }) %>
    </section>
  </body>
</html>
